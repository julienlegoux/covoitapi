{
  "name": "hono",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "prisma generate && prisma migrate deploy && tsc -p tsconfig.build.json",
    "start": "node dist/index.js",
    "test": "vitest",
    "lint": "biome lint --write .",
    "format": "biome format --write .",
    "check": "biome check --write .",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:push": "prisma db push",
    "db:reset": "prisma migrate reset",
    "db:seed": "tsx src/infrastructure/database/prisma/seed.ts",
    "db:size": "tsx src/infrastructure/database/prisma/check-size.ts",
    "db:export": "tsx src/infrastructure/database/prisma/export.ts"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.3.0",
    "@prisma/client": "^7.3.0",
    "@prisma/extension-accelerate": "^3.0.1",
    "argon2": "^0.44.0",
    "dotenv": "^17.2.3",
    "hono": "^4.11.7",
    "prisma": "^7.3.0",
    "reflect-metadata": "^0.2.2",
    "resend": "^6.9.1",
    "tsyringe": "^4.10.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.13",
    "@types/node": "^20.11.17",
    "tsx": "^4.7.1",
    "typescript": "^5.8.3",
    "vitest": "^4.0.18"
  }
}